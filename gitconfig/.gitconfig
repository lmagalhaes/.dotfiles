[core]
    excludesfile = ~/.dotfiles/gitconfig/.gitignore

[init]
    defaultBranch = main

[includeIf "gitdir:~/workspace/workyard/"]
    path = ~/.dotfiles/gitconfig/workyard

[rerere]
    enabled = true

[pull]
    rebase = true

[rebase]
    autoStash = true

[push]
    default = simple
    followTags = true

[fetch]
    prune = true

[grep]
    lineNumber = true

[help]
    autoCorrect = 1

[color]
    ui = auto

[merge]
    defaultToUpstream = true

[alias]
    # Worktree management
    wt-create = !git-worktree-create
    wt-list = !git-worktree-list
    wt-ls = !git-worktree-list
    wt-cleanup = !git-worktree-cleanup
    wt-rm = !git-worktree-remove
    wt-docker = !git-worktree-switch-docker

[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
