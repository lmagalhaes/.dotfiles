[core]

[init]
    defaultBranch = main

[includeIf "gitdir:~/workspace/workyard/"]
    path = ~/.dotfiles/gitconfig/workyard

[rerere]
	enabled = true

[pull]
	rebase = true

[rebase]
	autoStash = true

[push]
	default = simple
	followTags = true

[fetch]
	prune = true

[grep]
	lineNumber = true

[help]
	autoCorrect = 1

[color]
	ui = auto

[merge]
	defaultToUpstream = true
